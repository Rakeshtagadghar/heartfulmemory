# Environment
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Auth.js (NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# Convex
NEXT_PUBLIC_CONVEX_URL=
CONVEX_URL=
CONVEX_DEPLOY_KEY=

# Waitlist endpoint (optional overrides)
WAITLIST_STORAGE_FILE=
WAITLIST_RATE_LIMIT_WINDOW_MS=60000
WAITLIST_RATE_LIMIT_MAX=5

# Media (Sprint 10)
MAX_UPLOAD_MB=10
ALLOWED_MIME_TYPES=image/
MAX_UPLOADS_PER_USER=
PHOTOS_PROVIDER_ENABLED=all
PHOTOS_PER_PAGE=24
UNSPLASH_ACCESS_KEY=
PEXELS_API_KEY=

# Voice STT (Sprint 18)
# Optional: server-side default STT provider (`groq` or `elevenlabs`)
STT_PROVIDER_DEFAULT=groq
# Optional: server-enforced max recording/transcript duration per answer (seconds)
STT_MAX_SECONDS_PER_ANSWER=180
# Optional: server-side default transcription language code
STT_LANGUAGE_DEFAULT=en
# Optional: server-side per-user STT request cap (soft rate limit)
STT_RATE_LIMIT_PER_USER=60
# Optional: server-side Convex action timeout for STT calls (milliseconds)
STT_ACTION_TIMEOUT_MS=45000
# Optional: global feature flag to enable voice input UI and STT flow
ENABLE_VOICE_INPUT=true
# Optional: audio storage flag (Sprint 18 default is transcript-only, so false)
ENABLE_AUDIO_STORAGE=false
# Required if using Groq as the STT provider
GROQ_API_KEY=
# Required if using ElevenLabs as the STT provider
ELEVENLABS_API_KEY=
# Optional: browser-visible default provider for voice UI behavior (mirror server)
NEXT_PUBLIC_STT_PROVIDER_DEFAULT=groq
# Optional: browser-visible max duration for recorder UX (mirror server)
NEXT_PUBLIC_STT_MAX_SECONDS_PER_ANSWER=180
# Optional: browser-visible default language for voice UI (mirror server)
NEXT_PUBLIC_STT_LANGUAGE_DEFAULT=en
# Optional: browser-visible feature flag for voice input UI
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
# Optional: browser-visible audio storage flag (UI messaging/behavior)
NEXT_PUBLIC_ENABLE_AUDIO_STORAGE=false

# AI Draft Generation (Sprint 19)
# Optional: server-side default generation provider (`heuristic` or `groq`)
AI_PROVIDER_DEFAULT=heuristic
# Optional: server-side retry count for generation calls
AI_MAX_RETRIES=1
# Optional: server-side timeout for generation calls (milliseconds)
AI_TIMEOUT_MS=45000
# Optional: per-user generation/regen rate limit (requests per minute)
AI_RATE_LIMIT_PER_USER=20
# Optional: JSON map controlling target output size by narration length
AI_MAX_WORDS_BY_LENGTH={"short":350,"medium":700,"long":1100}
# Optional: browser-visible provider label for analytics/UI defaults
NEXT_PUBLIC_AI_PROVIDER_DEFAULT=heuristic
# Optional: browser-visible retry count for analytics/UI defaults
NEXT_PUBLIC_AI_MAX_RETRIES=1
